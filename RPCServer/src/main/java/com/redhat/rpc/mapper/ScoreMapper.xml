<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.redhat.rpc.mapper.ScoreMapper">
	<!-- 获取成绩 -->
	<select id="getScore" resultType="score">
		SELECT *
		FROM tb_score
		WHERE
		userId = #{userId}
	</select>

	<!-- 设置成绩 -->
	<insert id="setScore" parameterType="score">
		INSERT INTO
		tb_score (userId,
		subject, score)
		VALUES (#{userId}, #{subject}, #{score})
	</insert>

	<!-- 更新成绩 -->
	<update id="updateScore" parameterType="score">
		UPDATE tb_score
		SET score
		= #{score}
		WHERE userId = #{userId}
		AND subject = #{subject}
	</update>
</mapper>